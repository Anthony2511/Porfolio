.header
  background url('../images/backgroundPortfolio.jpg') no-repeat top center/cover
  position: relative
  &:before
    content: ""
    position: absolute
    top: 0
    bottom: 0
    right: 0
    left: 0
    width: 100%
    height: 100%
    background-color: rgba(0, 0, 0, 0.8)
  &__bloc
    color: $white
    position: relative
    z-index: 20
    font-family: 'montserrat'
    padding: s(300,16) 0 s(240,16)
    text-align: center
    text-transform: uppercase
    letter-spacing: 5px
  &__title
    font-size: s(50,16)
    font-weight: 100
    line-height: 1.6em
    font-family: 'varela'
  &__text
    font-weight: bold
    font-size: s(50,16)
    font-family: 'montserrat'
  &__scroll
    display: block
    padding-bottom: s(50,16)
    color: $white
    position: relative
    z-index: 20
    text-align: center
    & span
      hidden()
    &:before
      icon('iconScroll')
      display: block
      color: $white
      font-size: s(25,16)
      transition: all 0.5s $ease-personalize
    &:hover
      &:before
        transform: translateY(5px)
        transition: all 0.5s $ease-personalize

.header__scroll:hover .header__scroll:before
    transform: translateY(5px)
    transition: 0.5s $ease-personalize
