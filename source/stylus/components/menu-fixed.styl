.menu-fixed
  .nav
    background-color:rgba(255, 255, 255, 0.9)
    top: 0
    &__item
      padding: s(15,16) 0
    &__link
      color: $darkBlue
      display: block
      width: 100%
      height: 100%
    &__span
      &--active
        &:before
          background: $darkBlue
  .nav__item > .nav__link:before
    background-color: $darkBlue
  .nav__item > .nav__link:hover
    color: $darkBlue

@media screen and (max-width:1024px)
  .menu-fixed
    .nav
      &__link
        color: $white
      &__icon span
        background-color: $darkBlue
      &__button
        top: s(-22,16)
      &__span
        &--active
          &:before
            background: $white
    .nav__item > .nav__link:before
      background-color: $white
    .nav__item > .nav__link:hover
      color: $white
