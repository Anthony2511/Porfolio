.projet
  .nav
    background-color:rgba(255, 255, 255, 0.9)
    position: fixed
    top: 0
    &__item
      margin-right: s(50,20)
      padding: s(15,20) 0
      position: relative
      z-index: 200
    &__link
      color: $darkBlue
      display: block
      width: 100%
      height: 100%
    &__span
      &--active
        &:before
          background: $darkBlue

  .nav__item > .nav__link:before
    background-color: $darkBlue
  .nav__item > .nav__link:hover
    color: $darkBlue

@media screen and (max-width:1024px)
  .projet
  .home
    .nav
      background: none
      height: s(50,16)
      &__link
        color: $white
  .projet.with-menu
  .home.with-menu
    .nav
      height: auto
      &__icon span
        background-color: $white
      &__span
        &--active
          &:before
            background: $white
    .nav__item > .nav__link:hover
      color: $white
    .nav__item > .nav__link:before
      background-color: $white
