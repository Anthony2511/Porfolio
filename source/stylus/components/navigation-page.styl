.projet
  .nav
    background-color:rgba(255, 255, 255, 0.9)
    position: fixed
    top: 0
    &__item
      margin-right: s(50,20)
      padding: s(15,20) 0
      position: relative
      z-index: 200
    &__link
      color: $darkBlue
      display: block
      width: 100%
      height: 100%
    &__span
      &--active
        &:before
          background: $darkBlue

  .nav__item > .nav__link:before
    background-color: $darkBlue
  .nav__item > .nav__link:hover
    color: $darkBlue
