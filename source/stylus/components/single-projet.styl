.single-projet
  .header
    position: relative
    height: s(600,16)
    &:before
      content: ""
      position: absolute
      top: 0
      right: 0
      bottom: 0
      left: 0
      background-color: rgba(44,62,80,0.8)
  .nav
    background-color: rgba(255, 255, 255, 0.9)
    top: 0
    &__link
      color: $darkBlue
  .nav__item > .nav__link:before
    background-color: $darkBlue
  .nav__item > .nav__link:hover
    color: $darkBlue
  .container
    &__bloc
      max-width: s(1140,16)
      margin: 0 auto
      padding: s(150,16) s(20,16) s(100,16)
      color: $white
      position: relative
      z-index: 200
      clearfix()
    &__width
      margin-right: s(50,16)
      &:last-child
        margin-right: 0
    &__title
      font-size: s(50,16)
      font-weight: bold
      margin-bottom: s(50,50)
    &__date
      font-size: s(25,16)
      display: block
      margin-bottom: s(50,25)
    &__text
      font-size: s(18,16)
      line-height: 1.6em
      width: 50%
    &__links
      float: right
      position: relative
      top: s(-160,16)
    &__link
      color: $darkBlue
      background-color: $white
      display: block
      font-size: s(25,16)
      border-radius: s(50,25)
      padding: s(15,25) s(50,25)
      margin-bottom: s(50,25)
      text-align: center
      &--site
        &:before
          icon('iconSite')
          margin-right: s(20,25)
      &--repo
        &:before
          icon('iconRepo')
          margin-right: s(20,25)
      &:last-child
        margin-bottom: 0

.container
  &__projets
    max-width: s(1140,16)
    padding: s(150,16) s(20,16) s(100,16)
    margin: 0 auto
    position: relative

.projet
  .header
    &:before
      content: ""
      position: absolute
      top: 0
      right: 0
      bottom: 0
      left: 0
      background-color: rgba(44,62,80,0.8)

@media screen and (max-width:1024px)
  .single-projet
    .container
      &__bloc
        padding: s(100,16) s(20,16)
      &__width
        margin-right: 0
      &__text
        width: 100%
      &__links
        float: none
        top: s(50,16)
      &__link
        width: 40%
        margin: 0 auto
        text-align: center
        display: inline-block
        margin-right: s(30,16)
        &:last-child
          margin-right: 0
      &__projets
        text-align: center
    .nav
      height: s(50,16)
      background: none
  .single-projet.menu-fixed
    .nav
      background-color: rgba(255, 255, 255, 0.9)
  .single-projet.with-menu
    .nav
      height: auto
      &__link
        color: $white
      &__icon span
        background-color: $white
    .nav__item > .nav__link:before
      background-color: $white
    .nav__item > .nav__link:hover
      color: $white
  .projet
    .works
      &__container
        display: flex
        flex-direction: column
        justify-content: center
        align-items: center
      &__bloc
        margin-right: 0
        margin-bottom: s(50,16)
      &__title
        font-size: s(30,16)
      &__text
        font-size: s(20,16)
      &__width
        padding: s(100,16) s(20,16)
      &__infos
        transform: translateX(-400px)
        &:before
          height: s(60,16)
          top: s(65,16)

@media screen and (max-width:845px)
  .container
    &__projets
      padding: s(50,16) s(20,16) s(100,16)
  .single-projet
    .container
      &__bloc
        padding: 0

@media screen and (max-width:775px)
  .single-projet
    .container
      &__title
        font-size: s(40,16)
      &__date
        font-size: s(18,16)
      &__text
        font-size: s(16,16)
        line-height: 1.45em
      &__link
        font-size: s(18,16)
        width: 50%
        margin-right: 0
        margin-bottom: s(20,18)

@media screen and (max-width:550px)
  .projet
    .works
      &__title
        font-size: s(25,16)
      &__text
        font-size: s(16,16)
      &__infos
        transform: translateX(-350px)
        &:before
          height: s(50,16)
          top: s(55,16)
      &__link-projects
        &:before
          font-size: s(30,16)

@media screen and (max-width:500px)
  .single-projet
    .container
      &__link
        width: 100%
      &__title
        font-size: s(30,16)
        margin-bottom: s(20,30)
      &__date
        font-size: s(16,16)
        margin-bottom: s(20,16)
  .projet
    .works
      &__link
        font-size: s(22,16)
        padding: s(15,22) s(50,22)

@media screen and (max-width:410px)
  .projet
    .works
      &__title
        font-size: s(20,16)
      &__text
        font-size: s(14,16)
      &__link
        font-size: s(18,16)
        padding: s(15,18) s(40,18)

@media screen and (max-width:350px)
  .projet
    .works
      &__link-projects
        &:before
          font-size: s(16,16)
