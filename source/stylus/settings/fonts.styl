montserrat = Montserrat, Helvetica, Arial, sans-serif;
varela = Varela Round, Helvetica, Arial, sans-serif;


// VARELA ROUND SANS FONTS
@font-face {
    font-family: 'varela';
    src: url('../fonts/varela/varelaround-regular-webfont.woff2') format('woff2'),
         url('../fonts/varela/varelaround-regular-webfont.woff') format('woff');
    font-weight: normal;
    font-style: normal;

}

